generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi", "postgresqlExtensions", "prismaSchemaFolder"]
  engineType      = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Playlist {
  playlistId String  @id @default(cuid())
  ownerId    String
  name       String
  tracks     String?

  @@unique([ownerId, name])
}

model Room {
  roomId  String  @id
  ownerId String?
}
