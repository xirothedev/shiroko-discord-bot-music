generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi", "postgresqlExtensions", "prismaSchemaFolder"]
  engineType      = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Playlist {
  userId  String
  name    String
  tracks  Track[]
  private Boolean @default(false)

  @@unique([userId, name])
}

model Track {
  track_id         String   @id @default(cuid())
  uri              String
  name             String
  encode           String
  duration         Int
  playlist         Playlist @relation(fields: [playlist_user_id, playlist_name_id], references: [userId, name], onDelete: Cascade, onUpdate: Cascade)
  playlist_user_id String
  playlist_name_id String
}

model Logger {
  logId    String   @id @default(cuid())
  message  String
  createBy String?
  createIn String?
  createAt DateTime @default(now())
}

model Bot {
  botId   String  @id
  voiceId String? @unique
}
